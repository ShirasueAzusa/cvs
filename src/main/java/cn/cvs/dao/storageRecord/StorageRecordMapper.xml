<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.cvs.dao.storageRecord.StorageRecordMapper">
    <select id="getStorageRecordList" resultMap="storageRecordList">
        SELECT srCode, goodsName, supplierId, totalAmount, payStatus, sr.createdTime, supCode, supName FROM t_storage_record sr INNER JOIN t_supplier s ON sr.supplierId = s.id
        <where>
            supplierId in
            <foreach collection="supplierIdMap" item="item" open="(" separator="," close=")">
                #{item}
            </foreach>
        </where>
    </select>
    <resultMap id="storageRecordList" type="storageRecord">
        <id property="supplierId" column="supplierId"/>
        <result property="supplierName" column="supName"/>
        <association property="supplier" javaType="supplier">
            <id property="id" column="id"/>
            <result property="supCode" column="supCode"/>
            <result property="supName" column="supName"/>
        </association>
    </resultMap>
</mapper>